<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.Selection_Activity">

    <ImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wp_selection"></ImageView>

    <Spinner
        android:id="@+id/selec_SPN_breakfast"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:id="@+id/selec_SPN_lunch"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/selec_SPN_breakfast"
        android:layout_marginTop="20dp"

        />

    <Spinner
        android:id="@+id/selec_SPN_dinner"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/selec_SPN_lunch"
        android:layout_marginTop="20dp"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selec_RCV_col1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        ></androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selec_RCV_col2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="25dp"
        android:layout_toRightOf="@id/selec_RCV_col1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        ></androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selec_RCV_col3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="25dp"
        android:layout_toRightOf="@id/selec_RCV_col2"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        ></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>